{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "target": "ES5",
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["@timer/types"],
    "preserveSymlinks": true
  },
  "exclude": ["src/**/tests/**"],
  "include": ["src/**/*"]
}
